<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog site</title>
    <style>
      * {
        margin: 0px;
        padding: 0px;
      }

      body {
        font-family: sans-serif;
      }

      .nav {
        max-width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 15px 2px 2px white;
        background-color: #1b324f;
        padding: 10px;
        height: 50px;
      }

      .head {
        font-size: 2.2rem;
        color: #fff;
        font-weight: 600;
        font-family: monospace;
        margin-left: 15px;
      }

      .dropdown {
        position: relative;
        display: inline-block;
      }

      .profile {
        color: #fff;
        text-decoration: none;
        font-size: 2.2rem;
        margin-left: 10px;
      }

      .profile:hover {
        color: #7a7893;
      }

      .half {
        display: flex;
      }

      .blogs {
        display: grid;
        grid-template-columns: auto;
        align-content: start;
        justify-content: center;
        flex-direction: column;
        padding: 10px 0px 20px;
        margin: 0px 25px;
      }

      .bai {
        position: relative;
        width: 95%;
        background-color: white;
        padding: 15px;
        margin-top: 25px;
        border: 2px solid white;
        border-radius: 10px;
        box-sizing: border-box;
        box-shadow: 0 15px 35px rgb(50 50 93 / 10%), 0 5px 15px rgb(0 0 0 / 7%) !important;
      }

      img {
        max-width: 100%;
      }

      .protfolio {
        max-width: 100%;
        width: 300px;
        font-size: 1.2rem;
        height: fit-content;
        margin-left: 50px;
        margin-right: 15px;
        margin-top: 35px;
        background-color: rgb(157 146 219 / 80%);
        border: 2px solid white;
        border-radius: 10px;
        box-shadow: 0 15px 35px rgb(50 50 93 / 10%), 0 5px 15px rgb(0 0 0 / 7%) !important;
        line-height: 1.8;
        padding: 15px;
      }

      .protfolio a {
        background-color: white;
      }

      .protfolio a:hover {
        background-color: rgb(255 255 255 / 80%);
      }

      .blog {
        width: 100%;
        display: flex;
        justify-content: space-between;
        /* align-items: start; */
      }

      .written-by {
        display: flex;
        font-size: 14px;
        align-items: center;
        margin-bottom: 8px;
        font-family: monospace;
        font-weight: 600;
        text-decoration: none;
        color: black;
      }

      .head1 {
        width: 85%;
        margin-bottom: 10px;
        color: black;
        font-size: 2em;
        word-spacing: -5px;
        font-family: monospace;
        text-decoration: none;
        font-weight: 600;
      }

      .head1:hover {
        text-decoration: underline;
      }

      .date {
        color: darkslategray;
        margin: 3px 0px 8px;
        font-size: 0.7rem;
      }

      .para {
        font-size: 1.3rem;
        margin: 10px 0px;
      }

      .like {
        font-size: 1rem;
        margin-top: 10px;
        color: #7a7893;
      }

      .btns {
        margin-top: 10px;
        display: flex;
      }

      .btn {
        margin: 5px 0px 0px -1px;
        background-color: white;
        border: 2px solid white;
        border-radius: 8px;
        cursor: pointer;
      }

      .like-btn {
        color: black;
        font-size: 1.5rem;
        background-color: white;
        border: 2px solid white;
        border-radius: 8px;
        cursor: pointer;
      }

      .like-btn:hover {
        color: #4267b2;
      }

      .msg {
        color: green;
        font-size: 1.2em;
        margin-top: 10px;
      }

      @media screen and (max-width: 800px) {
        .plus {
          right: 5px;
        }

        .head {
          font-size: 3rem;
        }

        .blogs {
          padding: 10px 10px 20px;
          width: auto;
        }

        .bai {
          padding: 15px 10px;
          max-width: 100%;
        }

        .blog {
          max-width: 100%;
          width: 100%;
          flex-direction: column;
        }

        .blog img {
          margin: auto !important;
          padding: 10px;
        }

        .protfolio {
          display: none;
        }
      }
    </style>
  </head>

  <body>
    <nav class="nav">
      <h1 class="head">Blog site</h1>
      <div class="dropdown" style="margin-right: 15px">
        <a
          class="profile"
          href="/<%= profile.slugName %>/<%= profile.registerNumber %>"
          ><i class="far fa-user"></i
        ></a>
      </div>
    </nav>

    <section
      style="display: flex; justify-content: center; background-color: #f2f2f2"
    >
      <div class="blogs">
        <!-- all articles -->

        <% blogs.forEach(function (e) { %>
        <div class="bai">
          <!-- single article -->
          <div class="blog">
            <div
              style="
                display: flex;
                flex-direction: column;
                justify-content: space-between;
              "
            >
              <!--author name-->
              <div>
                <a
                  href="/other-profile/<%= e.slugName %>/<%= e.registerNumber %>"
                  class="written-by"
                >
                  <i
                    class="far fa-user"
                    style="margin-right: 5px; font-size: 18px"
                  ></i>
                  <%= e.name %>
                </a>
                <!-- title -->
                <a
                  href="/readMore/<%= e.slug %>/<%= e.blogNumber %>"
                  class="head1"
                  ><%= e.title %></a
                >

                <!-- description -->
                <p class="para"><%= e.description %></p>

                <!-- date -->
                <p class="date"><%= e.createdAt %></p>
              </div>
              <!-- no. of likes -->
              <p class="like">
                <i class="far fa-thumbs-up"></i> <%= e.likes %>
              </p>
            </div>

            <% if(e.imageBase64) {%>

            <img
              src="data:<%= e.contentType %>;base64,<%= e.imageBase64 %>"
              height="150"
              width="200"
              style="margin: 15px"
            />

            <% } %>
          </div>
          <div class="btns" style="margin-top: 10px; align-items: center">
            <!-- like button -->
            <form action="/like/<%= e.id %>?_method=PUT" method="POST">
              <div class="dropdown">
                <button type="submit" class="like-btn">
                  <i class="far fa-thumbs-up"></i>
                </button>
              </div>
            </form>

            <!-- comment button -->
            <div class="dropdown">
              <a
                class="like-btn"
                href="/comment/<%= e.slug %>/<%= e.blogNumber %>/<%= profile.registerNumber %>"
                style="margin-left: 5px"
                ><i class="far fa-comment"></i
              ></a>
            </div>
          </div>
        </div>
        <%})%>
      </div>
      <div>
        <div class="protfolio">
          <p style="font-weight: 600; margin-bottom: 20px">
            Write on Blog site
          </p>
          <p>Grow your readship</p>
          <p style="margin-bottom: 20px">Improve your writing skills</p>
          <a
            href="create"
            style="
              border: 2px solid white;
              padding: 7px;
              border-radius: 10px;
              text-decoration: none;
              color: black;
            "
            >Start writing</a
          >
        </div>
        <div class="protfolio" style="text-align: center; background: white">
          <h1 style="font-weight: 400; font-size: 2.2rem">Follow us on</h1>
          <a style="font-size: 2.8em; margin-right: 20px; color: #00acee"
            ><i class="fab fa-twitter"></i
          ></a>
          <a
            href="#"
            style="text-align: center; font-size: 2.8em; color: #0e76a8"
            ><i class="fab fa-linkedin"></i
          ></a>
        </div>
      </div>
    </section>
    <!--script for clearing flash and error messages-->
    <script>
      const clear = () => {
        var errors = document.querySelectorAll(".msg");
        errors.forEach((e) => (e.style.display = "none"));
      };
      setTimeout(clear, 5000);
    </script>
  </body>
</html>

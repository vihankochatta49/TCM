<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <title>Blog site</title>
</head>

<style>
  * {
    margin: 0px;
    padding: 0px;
  }

  body {
    margin: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: sans-serif;
  }

  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    border-bottom: 2px solid;
  }

  .btn {
    font-size: 1.5em;
    padding: 5px 10px;
    border: 2px solid;
    border-radius: 8px;
  }

  .anchor {
    text-decoration: white;
    color: black;
  }

  .logo {
    font-weight: 500;
    color: #000;
    font-size: 2rem;
    text-align: left;
  }

  .blank {
    height: 75%;
    overflow-x: hidden;
    overflow-y: auto;
    padding: 10px;
  }

  .send {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40%;
    margin-top: 15px;
  }

  .frm {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .message {
    border-radius: 100px;
    outline: none;
    min-height: 35px;
    width: 75%;
    padding: 10px;
    margin-right: 10px;
    border: 2px solid #333;
    font-size: 1.3rem;
    color: black;
  }

  .txt {
    position: relative;
    float: left;
    clear: both;
    border: 2px solid #e5e1e1;
    border-radius: 10px;
    margin-top: 20px;
    width: 45%;
  }

  .txt.arrow-left:after {
    content: " ";
    position: absolute;
    left: -8px;
    top: 2px;
    border-top: 15px solid transparent;
    border-left: none;
    border-right: 8px solid #e5e1e1;
    border-bottom: 15px solid transparent;
  }

  .txtr {
    float: right;
    clear: both;
    border: 2px solid #e5e1e1;
    border-radius: 10px;
    width: 45%;
    margin-top: 20px;
    position: relative;
  }

  .txtr.arrow-right:after {
    content: " ";
    position: absolute;
    right: -8px;
    top: 2px;
    border-top: 15px solid transparent;
    border-right: none;
    border-left: 8px solid #e5e1e1;
    border-bottom: 15px solid transparent;
  }

  .md {
    padding: 0px 0px 5px 10px;
    color: #000;
    font-size: 1.2rem;
  }

  .mdr {
    padding: 0px 0px 5px 8px;
    color: #000;
    font-size: 1.2rem;
  }
  .me {
    padding: 5px 10px;
    font-size: 0.8rem;
    color: #ffb703;
  }

  .mer {
    padding: 5px 5px 5px 8px;
    font-size: 0.8rem;
    color: #7a7893;
  }

  .button {
    border-radius: 100%;
    border: 2px solid #0c8484;
    padding: 10px;
    color: #f7f7f7;
    background-color: #0c8484;
  }

  .button:hover {
    opacity: 0.8;
  }

  .fa-paper-plane {
    font-size: 1.5rem;
  }

  @media screen and (max-width: 800px) {
    body {
      margin: 0px 10px;
    }

    .top-bar {
      width: 100%;
    }

    .blank {
      width: 100%;
    }

    .send {
      width: 100%;
    }
  }
</style>

<body>
  <div
    style="
      display: flex;
      margin: auto;
      flex-direction: column;
      width: 50%;
      max-width: 100%;
      border: 2px solid;
      border-radius: 20px;
      height: 80%;
    "
  >
    <div class="top-bar">
      <h1 class="logo">Comments</h1>
      <button class="btn">
        <a class="anchor" href="/feed"><i class="fas fa-home"></i></a></button
      ><!--All article button-->
    </div>
    <div class="blank"></div>
  </div>
  <div class="send">
    <form action="#" class="frm">
      <input
        class="message"
        name="message"
        placeholder="Write here..."
        required
      />
      <button class="button" type="submit">
        <i class="fas fa-paper-plane"></i>
      </button>
    </form>
  </div>
  <script>
    //script for comment section
    const roomName = "<%= art.roomName %>";
  </script>
  <script src="http://localhost:4202/socket.io/socket.io.js">
    //script for comment section
  </script>
  <script>
    //script for comment section
    const socket = io("http://localhost:4202");

    const drop = document.querySelector(".frm"); //form tag
    const dropMessage = document.querySelector(".message"); //input tag
    const container = document.querySelector(".blank"); //message container

    const append = (e, message) => {
      const txtDiv = document.createElement("div");
      txtDiv.classList.add("txt", "arrow-left");
      const messageElementOne = document.createElement("p");
      const messageElement = document.createElement("p");
      messageElementOne.innerHTML = e;
      messageElement.innerText = message;
      messageElementOne.classList.add("me");
      messageElement.classList.add("md");
      txtDiv.append(messageElementOne);
      txtDiv.append(messageElement);
      container.append(txtDiv);
    };

    const appendone = (e, message) => {
      const txtDiv = document.createElement("div");
      txtDiv.classList.add("txtr", "arrow-right");
      const messageElementOne = document.createElement("p");
      const messageElement = document.createElement("p");
      messageElementOne.innerHTML = e;
      messageElement.innerText = message;
      messageElementOne.classList.add("mer");
      messageElement.classList.add("mdr");
      txtDiv.append(messageElementOne);
      txtDiv.append(messageElement);
      container.append(txtDiv);
    };

    const name = "<%= num.name %>";
    // const name = prompt("Enter your name to get in:", "Unknown");
    socket.emit("new-user-joined", roomName, name);

    socket.on("recieve", (data) => {
      appendone(`${data.name}`, `${data.message}`);
    });

    socket.on("left", (name) => {
      appendone(`${name}`, "flyied away...");
    });

    drop.addEventListener("submit", (e) => {
      e.preventDefault();
      const mass = dropMessage.value;
      append("You", `${mass}`);
      socket.emit("send", roomName, mass);
      dropMessage.value = "";
    });
  </script>
</body>

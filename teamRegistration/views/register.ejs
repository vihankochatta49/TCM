<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TCM</title>
  </head>

  <body>
    <form action="/register" method="POST">
      <!--error messages-->
      <% if(typeof errors != 'undefined') { %> <% errors.forEach(function(error)
      { %>
      <p class="error"><%= error.msg %></p>
      <% }) %> <% } %>
      <!-- email -->
      <label for="team-name">Team-name</label>
      <input
        type="text"
        name="teamName"
        id="team-name"
        placeholder="Team-name..."
        required
      />

      <label for="name">name</label>
      <input type="text" name="name" id="name" placeholder="name..." required />

      <label for="email">email</label>
      <input
        type="text"
        name="email"
        id="email"
        placeholder="email..."
        required
      />
      <!-- password -->
      <input
        type="password"
        name="password"
        id="password"
        placeholder="password..."
        required
      />
      <!--confirm password -->
      <input
        type="password"
        name="password2"
        id="password2"
        placeholder="confirm password..."
        required
      />
      <br />
      <br />
      <label for="member1-name">Member-name</label>
      <input
        type="text"
        name="member1Name"
        id="member1-name"
        placeholder="member-name..."
        required
      />

      <label for="member1-email">Member-email</label>
      <input
        type="text"
        name="memberEmail"
        id="email"
        placeholder="member-email..."
        required
      />
      <br />
      <br />
      <label for="member2-name">Member-name</label>
      <input
        type="text"
        name="member2Name"
        id="member2-name"
        placeholder="Member-name..."
        required
      />

      <label for="member2-email">Member-email</label>
      <input
        type="text"
        name="memberEmail"
        id="email"
        placeholder="Member-email..."
        required
      />

      <!-- buttons -->
      <div class="btns">
        <button class="btn" type="submit">Register</button>
      </div>
    </form>
  </body>
</html>
